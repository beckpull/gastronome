



<h2 style="text-align: center;" class="is-title is-2">Add a Recipe</h2>
<div class="section">
    <input value="{{recipeData.id}}" type="hidden" class="form-input" id="recipe-id">
    <h3>Upload Image</h3>

    <form class="form share-recipe-form"
        id="recipe-form">

        <div class="form__section">
            <label for="uploadFile">
                Choose new image
            </label>
            <input type="file" class="file-upload-btn" id="uploadFile" name="uploadFile" style="display: inline-block;">
        </div>

        <div class="field">
            <label class="label">Recipe Name:</label>
            <div class="control">
                <input value="{{recipeData.recipe_name}}" class="input" type="text" placeholder="Name your recipe"
                    id="recipe-name">
            </div>
        </div>

        <div class="field">
            <label class="label">Description:</label>
            <div class="control">
                <input value="{{recipeData.description}}" class="input" type="text"
                    placeholder="Give your recipe a description" id="recipe-description">
            </div>
        </div>
        <div id="ingredients-container">
            {{#each recipeData.ingredients as |ingredient|}}

                <div class="field">
                    <label class="label">Ingredients:</label>
                    <div class="control">
                        <input value="{{ingredient.ingredient}}" class="input ingredient" type="text"
                            placeholder="ingredient">
                    </div>
                </div>
            {{/each}}
        </div>


        <div class="field">
            <div class="control">
                <button class="button is-link" id="add-ingredient">Add
                    Ingredient</button>
            </div>
        </div>

        <div id="instructions-container">
            {{#each recipeData.instructions as |instruction|}}

                <div class="field">
                    <label class="label">Instructions:</label>
                    <div class="control">
                        <input value="{{instruction.step}}" class="input instruction" type="text" placeholder="step">
                    </div>
                </div>
            {{/each}}
        </div>


        <div class="field">
            <div class="control">
                <button class="button is-link" id="add-step">Add Step</button>
            </div>
        </div>

        <div class="field">
            <label class="label">Has Meat:</label>
            <div class="control">
                <label class="checkbox">
                    <input value="{{recipeData.has_meat}}" type="checkbox" id="has-meat">
                    Yes, this recipe contains meat
                </label>
            </div>
        </div>

        <div class="field is-grouped">
            <div class="control">
                <button class="button is-link" id="update-btn" type="submit">Update
                    Recipe</button>
            </div>
            <div class="control">
                <button class="button is-link is-light" id="cancel-btn">Cancel</button>
            </div>
        </div>
    </form>
</div>

<script src="/js/updateRecipe.js"></script>
