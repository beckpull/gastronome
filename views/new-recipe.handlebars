<h2 class="is-title" id="create-recipe-pg-title">Create a New Recipe</h2>
<div class="section" id="new-recipe-pg-wrapper">
    <h3 id="upload-photo-txt">We eat with our eyes firstâ€”upload a photo!</h3>

    <form class="form share-recipe-form"
        id="recipe-form">

        <div class="form__section">
            <label for="uploadFile" class="button" id="upload-label" style="display: none;"></label>
            <input type="file" class="file-upload-btn" id="uploadFile" name="uploadFile" style="display: inline-block;">
        </div>

        <div class="recipe-name-wrapper">
            <div class="field">
                <label class="label field-label recipe-name-label">Recipe Name</label>
                <div class="control">
                    <input class="input" type="text" placeholder="Name your recipe." id="recipe-name">
                </div>
            </div>
        </div>

        <div class="description-wrapper">
            <div class="field">
                <label class="label description-label">Description</label>
                <div class="control">
                    <input class="input" type="text" placeholder="Give your recipe a description." id="recipe-description">
                </div>
            </div>
        </div>

        <div id="ingredients-container">
            <div class="ingredients-wrapper">
                <div class="field">
                    <label class="label" id="ingredients-label">Ingredients</label>
                    <div class="control">
                        <input class="input ingredient" type="text" placeholder="ingredient" id="ingredients-input-el">
                    </div>
                </div>
            </div>
        </div>

        <div class="field">
            <div class="control">
                <button class="button is-black is-medium" id="add-ingredient">Add Ingredient</button>
            </div>
        </div>

        <div id="instructions-container">
            <div class="instructions-wrapper">
                <div class="field">
                    <label class="label" id="instructions-label">Instructions</label>
                    <div class="control">
                        <input class="input instruction" type="text" placeholder="step" id="instructions-input-el">
                    </div>
                </div>
            </div>
        </div>

        <div class="field">
            <div class="control">
                <button class="button is-black is-medium" id="add-step">Add Step</button>
            </div>
        </div>

        <div class="meat-wrapper">
            <div class="field">
                <label class="label meat-label">Contains Meat</label>
                <div class="control">
                    <label class="checkbox meat-checkbox-label">
                        <input type="checkbox" id="has-meat">
                        Yes, this recipe contains meat.
                    </label>
                </div>
            </div>
        </div>

        <div class="share-cancel-btn-container">
            <div class="field is-grouped share-btn-container">
                <div class="control share-btn-control">
                    <button class="button is-black is-medium" id="share-btn" type="submit">Share Recipe</button>
                </div>
                <div class="control cancel-btn-container cancel-btn-control">
                    <button class="button is-danger is-light is-medium cancel-btn" id="cancel-btn">Cancel</button>
                </div>
            </div>
        </div>

    </form>
</div>

<script src="/js/newRecipe.js"></script>
